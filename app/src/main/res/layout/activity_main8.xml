<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main8Activity">

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="upload"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="#1E90FF"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        />

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Extract Text"
        android:background="#1E90FF"
        android:textColor="#fff"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/merge"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="No file uploaded."
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/opensans"
        android:id="@+id/notfound"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="220dp"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/sadface"
        android:id="@+id/sad"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/notfound"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/clockface"
        android:id="@+id/clockface"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/notfound"
        android:layout_marginTop="60dp"
        />
    <ProgressBar
        android:id="@+id/pBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="250dp"
        android:max="100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:indeterminate="true"

        android:progress="1" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/listview"
        android:layout_marginTop="27dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="13.0sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />



</RelativeLayout>